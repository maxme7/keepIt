<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KeepIt" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/frog_green</item>
        <item name="colorPrimaryVariant">@color/dark_red</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_red</item>
        <item name="colorSecondaryVariant">@color/dark_red</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="topSheetBgColor">@color/white</item>
        <item name="android:spinnerStyle">@style/Widget.AppCompat.Spinner.DropDown</item>
    </style>

    <style name="Theme.KeepIt.Dark" parent="Theme.MaterialComponents.NoActionBar" >
        <!-- Primary brand color. -->
        <item name="colorPrimary">#38B3EA</item>
        <item name="colorPrimaryVariant">#316893</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#89C7E3</item>
        <item name="colorSecondaryVariant">#1769AA</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="topSheetBgColor">#316893</item>
    </style>
</resources>